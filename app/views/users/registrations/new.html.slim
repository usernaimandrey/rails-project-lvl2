h2
  | Регистрация
= simple_form_for(@user, url: registration_path(@user), form_html: { class: 'needs-validation' }) do |f|
  = render 'users/shared/error_messages', resource: @user
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :email, autofocus: true, required: true, autocomplete: 'email', input_html: { class: 'form-control' }
  br

  .form-inputs
    - if @minimum_password_length
      em
        | (
        = @minimum_password_length
        |  characters minimum)
    = f.input :password, required: true, autocomplete: 'new-password', input_html: { class: 'form-control' }
  br

  .form-inputs
    = f.input :password_confirmation, required: true, autocomplete: 'new-password', input_html: { class: 'form-control' }
  br

  .actions
    = f.submit 'Sign up', class: 'btn btn-outline-primary mb-2'
= render 'users/shared/links'
